{
  "name": "superoffice-vscode",
  "publisher": "superoffice",
  "displayName": "superoffice-vscode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "superoffice-vscode.authenticate",
        "title": "Authenticate with SuperOffice"
      },
      {
        "command": "superoffice-vscode.signIn",
        "title": "Sign In",
        "icon": "$(log-in)",
        "category": "SuperOffice"
      },
      {
        "command": "superoffice-vscode.signOut",
        "title": "Sign Out",
        "icon": "$(log-out)",
        "category": "SuperOffice"
      },
      {
        "command": "superoffice-vscode.showScriptInfo",
        "title": "ShowScriptInfo"
      },
      {
        "command": "superoffice-vscode.previewScript",
        "title": "PreviewScript"
      },
      {
        "command": "superoffice-vscode.downloadScript",
        "title": "DownloadScript"
      },
      {
        "command": "superoffice-vscode.executeScript",
        "title": "ExecuteScript",
        "category": "SuperOffice",
        "enablement": "resourceScheme == file"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "superofficeViewContainer",
          "title": "SuperOffice",
          "icon": "/resources/logo.svg"
        },
        {
          "id": "superofficeWebviewContainer",
          "title": "SuperOffice Webview",
          "icon": "$(tools)"
        }
      ]
    },
    "views": {
      "superofficeViewContainer": [
        {
          "id": "scriptsTreeView",
          "name": "Scripts"
        }
      ],
      "superofficeWebviewContainer": [
        {
          "id": "scriptsWebview",
          "name": "Webview Scripts",
          "type": "webview"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "scriptsTreeView",
        "contents": "You are not logged in to SuperOffice [learn more](https://docs.superoffice.com/).\n[Login](command:superoffice-vscode.signIn)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "superoffice-vscode.signOut",
          "when": "view == scriptsTreeView && isLoggedIn",
          "group": "navigation",
          "icon": "$(log-out)"
        }
      ],
      "view/item/context": [
        {
            "command": "superoffice-vscode.previewScript",
            "group": "0_script",
            "when": "view == scriptsTreeView && viewItem == script"
        },
        {
          "command": "superoffice-vscode.downloadScript",
          "group": "0_script",
          "when": "view == scriptsTreeView && viewItem == script"
      }
      ],
      "explorer/context": [
        {
          "submenu": "superoffice.submenu",
          "group": "superoffice",
          "when": "isLoggedIn"
        }
      ],
      "superoffice.submenu": [
        {
          "command": "superoffice-vscode.executeScript"
        }
      ]
    },
    "submenus": [
      {
        "id": "superoffice.submenu",
        "label": "SuperOffice"
      }
    ],
    "languages": [
      {
        "id": "superoffice",
        "aliases": [ "SuperOfficeLang" ],
        "extensions": [
          ".suo"
        ],
        "icon": {
          "light": "/resources/logo.svg",
          "dark": "/resources/logo.svg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.6",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "node-fetch": "^2.7.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "openid-client": "^5.5.0"
  }
}
