// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Node",
			"program": "${workspaceFolder}/client/node_app/mainworker.cjs",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node",
			"resolveSourceMapLocations": [
				"${workspaceFolder}/client/node/**"
			],
		},
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/packages/vscode/",
				"--folder-uri=${workspaceRoot}/test"
			],
			"outFiles": [
				"${workspaceFolder}/packages/vscode/dist/**/*.js"
			],
			"preLaunchTask": "npm: build:vscode",
			"autoAttachChildProcesses": false
		},
		{
			"name": "Run Extension without extensions",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/packages/vscode/",
				"--disable-extensions",
				"--folder-uri=${workspaceRoot}/test"
			],
			"outFiles": [
				"${workspaceFolder}/packages/vscode/dist/**/*.js"
			],
			"preLaunchTask": "npm: build:vscode",
			"autoAttachChildProcesses": false
		},
		{
			"name": "Run Core Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/packages/superofficedx-vscode-core/",
				"--folder-uri=${workspaceRoot}/test"
			],
			"outFiles": [
				"${workspaceFolder}/packages/superofficedx-vscode-core/dist/**/*.js"
			],
			"preLaunchTask": "npm: build:vscode-core",
			"autoAttachChildProcesses": false
		},
	]
}
